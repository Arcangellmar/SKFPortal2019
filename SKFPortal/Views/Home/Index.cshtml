@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_SoloBootstrap.cshtml";
}

<div class="container-fluid" style="background-image: linear-gradient(75deg, #3832c5, #412b7c);">
    <div class="container">
        <div class="row min-vh-100 justify-content-center align-items-center text-center">
            <div class="col-md-6 col-12 d-md-flex d-none">
                <img src="~/Content/img/index.png" class="img-fluid" alt="" />
            </div>
            <div class="col-md-6 col-12">
                <h1 style="color: #6cd1ff;">¡Bienvenido SKF!</h1>
                <p class="text-light">Ingresa al portal para estar al dia.</p>
                <button id="btn-ingresar" class="btn btn-primary">Ingresa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#btn-ingresar").click(() => location.href = "@Url.Action("DashBoard", "Home")");
    </script>
}